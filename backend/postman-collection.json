{
  "info": {
    "name": "LogiDog Shipment Delay API",
    "description": "API collection for LogiDog Shipment Delay Predictor",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Get All Alerts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/alerts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "alerts"]
        }
      }
    },
    {
      "name": "Get Alerts - Filter by Severity (High)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/alerts?severity=High",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "alerts"],
          "query": [
            {
              "key": "severity",
              "value": "High"
            }
          ]
        }
      }
    },
    {
      "name": "Get Alerts - Filter by Mode (Air)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/alerts?mode=Air",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "alerts"],
          "query": [
            {
              "key": "mode",
              "value": "Air"
            }
          ]
        }
      }
    },
    {
      "name": "Get Alerts - Search",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/alerts?search=LD1001",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "alerts"],
          "query": [
            {
              "key": "search",
              "value": "LD1001"
            }
          ]
        }
      }
    },
    {
      "name": "Get Single Alert",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/alerts/LD1001",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "alerts", "LD1001"]
        }
      }
    },
    {
      "name": "Acknowledge Alert",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"shipmentId\": \"LD1001\",\n  \"userId\": \"test.user\"\n}"
        },
        "url": {
          "raw": "http://localhost:3001/api/alerts/acknowledge",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "alerts", "acknowledge"]
        }
      }
    }
  ]
}

